<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="admin/tool/etl/db" VERSION="20171024" COMMENT="XMLDB file for Moodle admin/tool/etl"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="tool_etl_task" COMMENT="Contains the list of ETL task">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="source" TYPE="char" LENGTH="100" NOTNULL="true" SEQUENCE="false" COMMENT="Source of the task"/>
        <FIELD NAME="source_settings" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Additional settings for the source"/>
        <FIELD NAME="processor" TYPE="char" LENGTH="100" NOTNULL="true" SEQUENCE="false" COMMENT="Processor for the task"/>
        <FIELD NAME="processor_settings" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Settings for the processor"/>
        <FIELD NAME="target" TYPE="char" LENGTH="100" NOTNULL="true" SEQUENCE="false" COMMENT="Target location"/>
        <FIELD NAME="target_settings" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Additional target settings"/>
        <FIELD NAME="enabled" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1" SEQUENCE="false" COMMENT="Enable or disable the task"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="tool_etl_schedule" COMMENT="Contains the schedule for tasks">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="taskid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="frequency" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="schedule" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="nextevent" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="tooletlsched_t_fk" TYPE="foreign" FIELDS="taskid" REFTABLE="tool_etl_task" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="tool_etl_log" COMMENT="Contains the log for the task">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="time" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="unix time"/>
        <FIELD NAME="runid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="taskid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="logtype" TYPE="char" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="element" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="action" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="info" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="trace" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="tooletllog_t_fk" TYPE="foreign" FIELDS="taskid" REFTABLE="tool_etl_task" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="logtype" UNIQUE="false" FIELDS="logtype"/>
        <INDEX NAME="element" UNIQUE="false" FIELDS="action"/>
        <INDEX NAME="action" UNIQUE="false" FIELDS="action"/>
        <INDEX NAME="taskid" UNIQUE="false" FIELDS="runid"/>
        <INDEX NAME="runid" UNIQUE="false" FIELDS="runid"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
